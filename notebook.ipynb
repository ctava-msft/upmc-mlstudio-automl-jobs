# Install required packages (uncomment if needed)
# %pip install azure-ai-ml azure-identity

# 1. Import libraries
from azure.ai.ml import MLClient, automl, Input
from azure.ai.ml.constants import AssetTypes
from azure.identity import DefaultAzureCredential

# 2. Connect to Azure ML Workspace
credential = DefaultAzureCredential()
ml_client = MLClient(
    credential=credential,
    subscription_id="<YOUR_SUBSCRIPTION_ID>",
    resource_group_name="<YOUR_RESOURCE_GROUP>",
    workspace_name="<YOUR_WORKSPACE_NAME>"
)

print("✓ Connected to Azure ML Workspace")

# 3. Define compute cluster name
compute_name = "<YOUR_COMPUTE_CLUSTER>"  # Example: "cpu-cluster"

# 4. Prepare training data
# Option A: Use an existing registered dataset
training_data = Input(type=AssetTypes.MLTABLE, path="azureml:<DATASET_NAME>:<VERSION>")

# Option B: Register a local CSV file as a dataset
# Uncomment if you want to upload a local file
# from azure.ai.ml.entities import Data
# data_asset = Data(
#     name="my-training-data",
#     path="./data/train.csv",
#     type=AssetTypes.URI_FILE,
#     description="Training dataset for AutoML"
# )
# ml_client.data.create_or_update(data_asset)
# training_data = Input(type=AssetTypes.URI_FILE, path=f"azureml:{data_asset.name}:{data_asset.version}")

# 5. Create AutoML Classification Job
job = automl.classification(
    compute=compute_name,
    experiment_name="automl-notebook-demo",
    training_data=training_data,
    target_column_name="<TARGET_COLUMN>",  # Replace with your label column
    primary_metric="accuracy",
    n_cross_validations=5,
    enable_model_explainability=True
)

# Optional: Set training limits
job.set_limits(timeout_minutes=60, max_trials=4)

# 6. Submit job to cluster
returned_job = ml_client.jobs.create_or_update(job)

print("✓ AutoML job submitted successfully!")
print(f"Job name: {returned_job.name}")
print(f"Monitor progress here: {returned_job.studio_url}")